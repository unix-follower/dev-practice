<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="stock-market">
        <class>org.example.db.stockmarket.Stock</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://192.168.105.8:32000/stock_market" />
            <property name="jakarta.persistence.jdbc.user" value="${STOCK_MARKET_DB_USERNAME}" />
            <property name="jakarta.persistence.jdbc.password" value="${STOCK_MARKET_DB_PASSWORD}" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />
        </properties>

    </persistence-unit>

</persistence>
