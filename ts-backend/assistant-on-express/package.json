{
  "name": "assistant-on-express",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=22.16.0"
  },
  "_moduleAliases": {
    "@": "build"
  },
  "scripts": {
    "build": "tsc -b",
    "prod": "node --require ./build/instrumentation.js ./build/server.js",
    "start-local": "npm run build && NODE_ENV=local npm run prod",
    "check-format": "prettier --log-level error --check '**/*.{js,jsx,ts,tsx,cjs,mjs,json,css,html}'",
    "format": "prettier --log-level warn --write '**/*.{js,cjs,jsx,ts,tsx,json,css,html}'",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint ."
  },
  "dependencies": {
    "@langchain/core": "^0.3.42",
    "@langchain/mistralai": "^0.2.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.203.0",
    "@opentelemetry/exporter-prometheus": "^0.203.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.203.0",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "cookie-parser": "~1.4.4",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "http-errors": "~1.6.3",
    "http-status-codes": "^2.3.0",
    "langchain": "^0.3.19",
    "module-alias": "^2.2.3",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "eslint-import-resolver-typescript": "^4.2.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  }
}
